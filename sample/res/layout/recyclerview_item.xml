<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recyclerViewItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/recyclerViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/recyclerViewItemIcon"
        android:layout_toEndOf="@+id/recyclerViewItemIcon"
        android:layout_centerVertical="true"
        tools:text="name"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/recyclerViewItemDeleteButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/delete_icon_xml"/>

    <Button
        android:id="@+id/recyclerViewItemCopyButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/recyclerViewItemDeleteButton"
        android:layout_toStartOf="@+id/recyclerViewItemDeleteButton"
        android:layout_centerVertical="true"
        android:background="@drawable/copy_icon_xml"/>

</RelativeLayout>
